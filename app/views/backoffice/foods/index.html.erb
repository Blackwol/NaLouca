<body>

    <div id="wrapper"> 

        

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Editando Cardapio <%= @category.name%></h1>

                        <div class="panel-body">
                        	<%= link_to "Novo prato", new_food_path, type: "button", class:"btn btn-success" %>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Pratos</th>
											<th></th>	
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% @foods.each do |food| %>
                                                <tr>
                                                    <td><%=food.title%></td>
                                                    <td>
                                                        <%= link_to edit_food_path(food), class: "btn btn-info" do %>
                                                            Editar
                                                        <% end %>
                                                    </td>
                                                    <td>
                                                        <%= link_to food, method: :delete, class:"btn btn-danger", data: { confirm: "Tem certeza?" } do %>
                                                            Apagar
                                                        <% end %>
                                                    </td>
                                                </tr>
                                            <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->                            
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

</body>