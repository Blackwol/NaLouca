                        <% @foods.each do |food| %>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <div class="thumbnail">
                                    <%= image_tag food.picture.url(:medium) %>
                                    <div class="caption">
                                        <h4 class="pull-right">R$<%=food.price%></h4>
                                        <h4>
                                            <%= link_to truncate(food.title, length:20), site_food_detail_path(food.id) %>
                                        </h4>
                                        <p><%= truncate(food.description, length: 100) %></p>
                                    </div>
                                    <div class="ratings">
                                        <p>
                                            <%= food.comments.count %> Coment√°rios
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% end %>